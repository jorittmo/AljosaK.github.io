### Stage 3

```{r exp2ana, echo=FALSE, include=FALSE}


perf_data %>% # Wrangle data to be suitable for repeated measures ANOVA
  filter(Stage==3) %>%
  ungroup() %>%
  select(-Condition, -Stage, -Out_sum_tot) %>%
  pivot_wider(id_cols = Subject, 
              values_from = Out_sum_f5,
              names_from = c("type_task", "type_out")) %>%
  select(-Subject) -> wide_xp2
  

idataxp2 <- data.frame(type_task = c("Individual_", "Individual_", "Social_", "Social_"), type_out = c("DOT", "NDOT", "DOT", "NDOT")) # Create design data frame


xp2_f5mod <- lm(as.matrix(wide_xp2) ~ 1) # Create null model

xp2_ana <- car::Anova(xp2_f5mod, idata = idataxp2, idesign = ~type_task * type_out) # Run repeated measures ANOVA


xp2stats <- heplots::etasq(xp2_ana, anova = TRUE, partial =TRUE) # Get partial eta squared 

perf_data %>% # Get summary statistics
  ungroup() %>%
  filter(Stage==3) %>%
  select(-Out_sum_tot, -Subject, -Stage, -Condition) %>%
  group_by(type_out) %>%
  get_summary_stats()-> xp2_sum_out



```

